#!/usr/bin/env bash

if [ ! -z "$XDEBUGIDEKEY" ]; then
  echo "xdebug.idekey=$XDEBUGIDEKEY" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
fi

if [ ! -z "$XDEBUGMODE" ]; then 
    echo "xdebug.mode=$XDEBUGMODE" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
else
    echo "xdebug.mode=off" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi


if [ $# -gt 0 ];then
    exec gosu $WWWUSER "$@"
else
    /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
